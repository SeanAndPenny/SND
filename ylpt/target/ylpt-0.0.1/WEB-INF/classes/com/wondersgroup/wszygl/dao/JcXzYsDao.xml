	<select id="pageSelect"
		resultType="com.wondersgroup.wszygl.model.JcModel">
		<![CDATA[
	select brxm,decode(brxb,'1','男','2','女') as brxb,sqksmc,jcmc,yljgdm,b.mc as yljgmc,sfws,
  bgrq,nvl(bgrxm,shrxm) bgrxm,instanceuid  as bglsh ,STUDYUID as jch
   from TB_rIS_REPORT a
left join tb_volap_yljg b
on a.yljgdm=b.id  where 1=1 and substr(a.bgrq,0,4)=to_char(sysdate,'yyyy')
		]]>
		<include refid="commonWhere"></include>
	</select>

	<select id="getJcXzYs"
		resultType="com.wondersgroup.wszygl.model.JcModel">
	<![CDATA[
        select count(1)as rs ,yljgdm,sqks,sfws,bgrgh,nvl(bgrxm,shrxm)bgrxm
  from TB_rIS_REPORT t  where 1=1	and substr(t.bgrq,0,4)=to_char(sysdate,'yyyy')

]]>
		<include refid="commonWhere"></include>
		<![CDATA[  group by yljgdm,sqks,sfws,bgrgh,nvl(bgrxm,shrxm)   ]]>
	</select>






